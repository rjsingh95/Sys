<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="3dp"
    android:layout_marginBottom="2dp"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_single_image"


            android:layout_width="90dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:src="@drawable/book" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/user_single_image"
        android:text="Book Title"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
<LinearLayout
    android:layout_width="wrap_content"
    android:id="@+id/user_single_status"
    android:layout_alignStart="@+id/user_single_name"
    android:layout_below="@+id/user_single_name"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:id="@+id/price"
        android:text="Price" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_marginStart="25dp"

        android:text="Time" />

</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@id/user_single_status"
            android:layout_alignLeft="@id/user_single_status"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"

            android:layout_height="40dp">




            <Button
                android:layout_width="80dp"
                android:id="@+id/cancel"
                android:alpha=".9"

                android:layout_height="match_parent"

                android:backgroundTint="@color/red1"
                android:elevation="3dp"
                android:text="Delete"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>