<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    tools:context=".Search_shops">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar"
        ></include>


    <!--********story by and refine*********-->

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbarbg"
        android:paddingBottom="16dp"
        android:paddingTop="10dp"
        android:orientation="horizontal"
        >

        <customfonts.MyTextView
            android:layout_weight="0.9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STORY BY"
            android:drawableLeft="@drawable/arrowupdown"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/Tex"
            android:textSize="12dp"
            android:drawablePadding="2dp"

            />

        <View

            android:layout_width="1dp"
            android:layout_height="21dp"
            android:background="@color/colordevider"></View>
        <customfonts.MyTextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REFINE"
            android:drawableLeft="@drawable/refine"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/Tex"
            android:textSize="12dp"
            android:drawablePadding="2dp"
            />

        <View

            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_marginRight="30dp"
            android:background="@color/colordevider"></View>

        <ImageView
            android:id="@+id/gridviewicon"
        android:visibility="visible"
            android:layout_marginRight="30dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/gridviewicon"/>
        <ImageView
            android:id="@+id/listviewicon"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:background="@drawable/listviewicon"/>



    </LinearLayout>





<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="103dp"
    android:scrollbars="none"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.supplyingyourservice.ranjeet.singh.sys.ExpandableHeightListView
        android:visibility="visible"
        android:id="@+id/shoplistview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f3f4"/>

</RelativeLayout>

</ScrollView>

</RelativeLayout>
