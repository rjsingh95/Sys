<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rect"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/deliverypackage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/deliverypackage" />

                <customfonts.MyTextView
                    android:id="@+id/orderpalced"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:layout_weight="1"
                    android:text="Order placed"
                    android:textColor="@color/textSub"
                    android:textSize="14dp" />

                <customfonts.MyTextView
                    android:id="@+id/ordertime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.7"
                    android:text="2 day ago"
                    android:textColor="@color/textSub"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/more"
                    android:visibility="visible" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">


                <customfonts.MyTextView

                    android:id="@+id/orderid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Dealer  "
                    android:textColor="@color/Tex"
                    android:textSize="17dp"


                    />

                <customfonts.MyTextView
                    android:id="@+id/shop_name"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Shop"
                    android:textColor="@color/textSub"
                    android:textSize="17dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <customfonts.MyTextView
                        android:id="@+id/p_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="3dp"
                        android:lines="2"
                        android:text="Product Title"
                        android:textColor="@color/Tex"
                        android:textSize="@dimen/text"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/qt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Price :"
                            android:textColor="@color/Tex"
                            android:textSize="16sp" />


                        <customfonts.MyTextView
                            android:id="@+id/fprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="Rs 2000"
                            android:textColor="@color/textSub"
                            android:textSize="16sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <customfonts.MyTextView
                            android:id="@+id/estdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estimated Time"
                            android:textColor="@color/textSub"
                            android:textSize="@dimen/textsub" />


                        <customfonts.MyTextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                             android:layout_marginLeft="6dp"
                            android:text="June 23, 2016"
                            android:textColor="@color/red"
                            android:textSize="@dimen/textsub" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.2"
                    android:orientation="vertical">


                    <ImageView

                        android:id="@+id/image"
                        android:layout_width="190px"
                        android:layout_height="165px"
                        android:layout_gravity="center"
                        android:scaleType="centerInside" />

                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/waiting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="1dp"
                android:background="@drawable/round_rectangle"
                android:elevation="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/Tex"
                android:textSize="12dp" >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
            android:text="Waiting For Confirmation"/>


            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <customfonts.Button_Roboto_Medium
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/make_offer"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Bargain"
                    android:background="@drawable/round_rectangle_brown"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />

                <customfonts.Button_Roboto_Medium
                    android:id="@+id/accept"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_rectangle_brown"
                    android:elevation="5dp"
                    android:gravity="center"

                    android:padding="10dp"
                    android:text="Accept"
                    android:textColor="@color/Tex"
                    android:textSize="12dp" />


                <customfonts.Button_Roboto_Medium
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/cancel"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="cancel"
                    android:background="@drawable/round_rectangle_brown"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/complete"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_rectangle_brown"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="10dp"
                    android:text="Delivered ?"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />
                <EditText
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:visibility="gone"
                    android:elevation="5dp"
                    android:text="kdnckndkkf"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/removed"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Remove from list"
                    android:visibility="gone"
                    android:background="@drawable/round_rectangle"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />
                <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/yoursubcriber"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="SUBSCRIBED"
                    android:drawableEnd="@drawable/checked"
                    android:drawablePadding="8dp"
                    android:background="@drawable/round_rectangle"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />

                <Button
                    android:id="@+id/notsubscriber"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_red"
                    android:elevation="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="NOt Subcribed"
                    android:textColor="@color/White"
                    android:textSize="12dp" />



                <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:id="@+id/call"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Call"
                    android:background="@drawable/round_rectangle"
                    android:textColor="@color/textSub"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colordevider"></View>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal"
                android:padding="16dp"


                >

                <ImageView
                    android:id="@+id/radio1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/radiogreen" />

                <ProgressBar
                    android:id="@+id/progressBar1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="30"
                    android:progressTint="@color/green"
                    android:secondaryProgressTint="@color/green" />


                <ImageView
                    android:id="@+id/radio2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/radioblack" />

            </LinearLayout>


            <ImageView
                android:id="@+id/radio3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/radiogreen" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <customfonts.MyTextView
                android:id="@+id/placed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Waiting for confirtmation"
                android:textColor="@color/green"
                android:textSize="@dimen/textsub" />

            <customfonts.MyTextView
                android:id="@+id/shipped"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Delivery Status"
                android:textColor="@color/green"
                android:textSize="@dimen/textsub" />

            <customfonts.MyTextView
                android:id="@+id/delivered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Delivered"
                android:textColor="@color/textSub"
                android:textSize="@dimen/textsub" />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>