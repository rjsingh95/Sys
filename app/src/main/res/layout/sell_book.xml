<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="#F3F3F3"
            android:padding="0dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:background="@color/white"


                android:layout_height="wrap_content">

            </androidx.cardview.widget.CardView>


            <!-- username section -->
            <RelativeLayout
                android:id="@+id/relLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card"
                android:layout_marginHorizontal="10dp"

                android:layout_marginTop="20dp"

                android:elevation="4dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@color/white"

                    android:layout_height="wrap_content">
                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/tv"
                        android:layout_width="305dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="15dp"
                        android:textSize="15dp"

                        android:layout_marginTop="10dp"
                        android:text="Price"
                        android:textColor="@color/transparentBlack" />


                    <customfonts.EditText_Roboto_Regular
                        android:id="@+id/price"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="8dp"


                        android:backgroundTint="@color/textSub"

                        android:layout_marginHorizontal="10dp"
                        android:drawingCacheQuality="low"
                        android:layout_marginTop="25dp"



                        android:hint="Price"
                        android:inputType="textNoSuggestions" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout1"
                android:layout_marginHorizontal="10dp"

                android:layout_marginTop="20dp"

                android:elevation="4dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@color/white"

                    android:layout_height="wrap_content">
                  <androidx.appcompat.widget.AppCompatSpinner
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/quality"
                      android:padding="20dp">

                  </androidx.appcompat.widget.AppCompatSpinner>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>



            <!-- display_name section -->
            <RelativeLayout
                android:id="@+id/relLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rele"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/tv2"
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:text="Address"
                        android:textSize="15dp"

                        android:textColor="@color/transparentBlack" />

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/address"
                        android:layout_width="330dp"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="12dp"
                        android:backgroundTint="@color/textSub"
                        android:drawingCacheQuality="low"


                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="5dp"



                        android:drawablePadding="8dp"
                        android:hint="Address"
                        android:inputType="textNoSuggestions" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>


            <!-- website section -->
            <RelativeLayout
                android:id="@+id/relLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout2"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="343dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/transparentBlack"
                        android:id="@+id/tv3"
                        android:layout_alignParentStart="true"
                        android:textSize="15dp"

                        android:layout_marginTop="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:text="Phone" />

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/phone"
                        android:layout_below="@id/tv3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="25dp"
                        android:layout_marginStart="10dp"
                        android:drawingCacheQuality="low"
                        android:drawablePadding="5dp"
                        android:backgroundTint="@color/textSub"



                        android:hint="Enter your number"
                        android:inputType="textNoSuggestions"
                        android:maxLines="2" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relLayoute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayout3"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="10dp"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <customfonts.MyTextView_Roboto_Medium
                        android:layout_width="343dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/transparentBlack"
                        android:id="@+id/tv4"
                        android:layout_alignParentStart="true"
                        android:textSize="15dp"

                        android:layout_marginTop="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="12dp"
                        android:text="Name" />

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/name"
                        android:layout_below="@id/tv4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="25dp"
                        android:layout_marginStart="10dp"
                        android:drawingCacheQuality="low"
                        android:drawablePadding="5dp"
                        android:backgroundTint="@color/textSub"



                        android:hint="Enter Your Name"

                        android:maxLines="2" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>








            <RelativeLayout
                android:id="@+id/relLayout8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relLayoute"
                android:alpha=".95"

                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="20dp">

                <customfonts.MyTextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3a4242"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_marginBottom="15dp"
                    android:paddingTop="10dp"
                    android:text="Sell"
                    android:textColor="@color/White"
                    android:textSize="16dp" />





            </RelativeLayout>

        </RelativeLayout>


    </ScrollView>

</RelativeLayout>