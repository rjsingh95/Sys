<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_single_layout"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="6dp"
    >

    <RelativeLayout
        android:id="@+id/rel"

        android:layout_width="250dp"
        android:layout_height="wrap_content"

        android:background="@drawable/round_grey"
        android:orientation="vertical"
        android:padding="9dp">


        <TextView
            android:id="@+id/name_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"

            android:text="Display Name"
            android:textColor="@color/Tex"
            android:textSize="15sp"
            android:textStyle="bold" />

        <customfonts.MyTextView_Roboto_Regular
            android:id="@+id/message_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_text_layout"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="05dp"
            android:padding="0dp"

            android:text="Message Text"
            android:textColor="#616e7f"

            android:textSize="14sp" />


        <customfonts.MyTextView
            android:id="@+id/time_text_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"

            android:layout_below="@+id/message_text_layout"
            android:text="00:00"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/message_image_layout"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_alignTop="@+id/time_text_layout"

            android:layout_gravity="center"

            android:visibility="gone" />
        <customfonts.MyTextView
            android:id="@+id/time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_image_layout"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"

            android:layout_toStartOf="@+id/message_text_layout"
            android:text="00:00"
            android:textSize="12sp" />


    </RelativeLayout>







</RelativeLayout>